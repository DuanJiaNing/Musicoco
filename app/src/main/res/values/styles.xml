<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/song_list_show</item>
        <item name="android:windowExitAnimation">@anim/song_list_hide</item>
    </style>

    <style name="AppThemePlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryLight</item>

    </style>

</resources>
